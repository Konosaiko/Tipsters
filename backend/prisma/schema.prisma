generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tipster {
  id          String   @id @default(uuid())
  displayName String
  bio         String?
  tips        Tip[]
  createdAt   DateTime @default(now())
}

model Tip {
  id          String   @id @default(uuid())
  tipsterId   String
  tipster     Tipster  @relation(fields: [tipsterId], references: [id], onDelete: Cascade)
  event       String
  prediction  String
  odds        Float
  explanation String?
  createdAt   DateTime @default(now())
}
