generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String    @unique
  email     String    @unique
  password  String    // Hashed password
  birthDate DateTime
  tipster   Tipster?  // One-to-one: a user can have one tipster profile
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Tipster {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  displayName String
  bio         String?
  tips        Tip[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tip {
  id          String     @id @default(uuid())
  tipsterId   String
  tipster     Tipster    @relation(fields: [tipsterId], references: [id], onDelete: Cascade)
  event       String
  prediction  String
  odds        Float
  explanation String?
  result      TipResult? // null = pending, set when tipster marks result
  settledAt   DateTime?  // when result was marked by tipster
  stake       Float      @default(1) // always 1 unit, hidden from public
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum TipResult {
  WON
  LOST
  VOID
}
